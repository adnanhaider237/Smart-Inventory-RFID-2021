<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:padding="10sp"
    tools:context=".ConfigureActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_connection"
        android:drawablePadding="10sp"
        android:fontFamily="@font/calibri_bold"
        android:gravity="center"
        android:padding="10sp"
        android:text="Enter Connection Info"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/calibri_bold"
        android:text="Server Address"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <EditText
            android:id="@+id/et_identifier"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:background="@drawable/edit_text"
            android:fontFamily="@font/calibri_bold"
            android:inputType="text"
            android:padding="5sp" />

        <ImageView
            android:id="@+id/img_identifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_scan" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:background="@drawable/on_click_btn_change_color"
        android:fontFamily="@font/calibri_bold"
        android:text="OKAY"
        android:textColor="@color/white" />
</LinearLayout>