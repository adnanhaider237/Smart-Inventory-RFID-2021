<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:padding="5sp"
    tools:context=".LandingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/calibri_bold"
            android:gravity="center"
            android:text="MENU"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_settings"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="right"
            android:foreground="?android:selectableItemBackground"
            android:src="@drawable/ic_settings" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/black" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_inventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:background="@drawable/on_click_btn_change_color"
            android:fontFamily="@font/calibri_bold"
            android:text="Perform Inventory"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:background="@drawable/on_click_btn_change_color"
            android:fontFamily="@font/calibri_bold"
            android:text="Check Single Tag"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_sync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:background="@drawable/on_click_btn_change_color"
            android:fontFamily="@font/calibri_bold"
            android:text="Sync Master Data"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_view_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:background="@drawable/on_click_btn_change_color"
            android:fontFamily="@font/calibri_bold"
            android:text="View Inventory Data"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/btn_Physical_Inventory_Doc_Create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:background="@drawable/on_click_btn_change_color"
            android:fontFamily="@font/calibri_bold"
            android:text="Physical Inventory Doc Create"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Version 3.1"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>